{
  "name": "yondako",
  "private": true,
  "scripts": {
    "dev": "next dev --experimental-https -H local.yondako.com",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint --write",
    "fmt": "biome format",
    "pages:build": "bunx @cloudflare/next-on-pages",
    "preview": "bun pages:build && wrangler pages dev",
    "deploy": "bun pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "generate:schema": "drizzle-kit generate --dialect sqlite --out ./src/db/migrations --schema",
    "svgo": "bunx svgo ./src/assets/icons/",
    "drizzle:studio": "bun --env-file=.env.local  run drizzle-kit studio"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.4.2",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "cloudflare": "^3.5.0",
    "drizzle-orm": "^0.32.1",
    "htmlparser2": "^9.1.0",
    "next": "14.2.5",
    "next-auth": "^5.0.0-beta.20",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-use": "^17.5.1",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.4.0",
    "valibot": "^0.36.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@cloudflare/next-on-pages": "^1.13.1",
    "@cloudflare/workers-types": "^4.20240725.0",
    "@libsql/client": "^0.7.0",
    "@svgr/webpack": "^8.1.0",
    "@types/bun": "^1.1.6",
    "@types/node": "^20.14.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.23.1",
    "lefthook": "^1.7.11",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vercel": "^35.2.2",
    "wrangler": "^3.68.0"
  },
  "overrides": {
    "string-width": "4.2.3"
  }
}
